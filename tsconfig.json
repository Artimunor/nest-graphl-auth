{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@modules": ["src/modules"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
